                        <span asp-validation-for="DichVu1DTO.GiaHd" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="DichVu1DTO.LoaiHd" class="control-label"></label>
                        <input asp-for="DichVu1DTO.LoaiHd" class="form-control form-control-sm" id="txtLoaiHd" />
