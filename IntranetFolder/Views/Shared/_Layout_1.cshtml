
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"]</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link href="~/Assets/lib/bootstrap-4.4.1-dist/css/bootstrap.css" rel="stylesheet" />*@
    <!-- Font Awesome -->
    <link href="~/lib/AdminLTE-3.0.5/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <!-- Ionicons -->
    @*<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">*@
    <!-- iCheck -->
    <link href="~/lib/AdminLTE-3.0.5/plugins/icheck-bootstrap/icheck-bootstrap.css" rel="stylesheet" />
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/lib/AdminLTE-3.0.5/plugins/sweetalert2/sweetalert2.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/lib/AdminLTE-3.0.5/plugins/toastr/toastr.min.css">
    <!-- overlayScrollbars -->
    <link href="~/lib/AdminLTE-3.0.5/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <!-- Select2 -->
    <link href="~/lib/AdminLTE-3.0.5/plugins/select2/css/select2.css" rel="stylesheet" />
    <link href="~/lib/AdminLTE-3.0.5/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
    <!-- pace-progress -->
    <link href="~/lib/AdminLTE-3.0.5/plugins/pace-progress/themes/orange/pace-theme-flat-top.css" rel="stylesheet" />
    <link href="~/lib/AdminLTE-3.0.5/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/lib/AdminLTE-3.0.5/plugins/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <!-- ChartJs -->
    <link href="~/lib/ChartJs/Chart.js/Chart.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="~/images/LogoLeft.ico" rel="shortcut icon" />
    <link href="~/css/MyCss.css" rel="stylesheet" />

</head>
<body class="layout-top-nav text-sm" style="height: auto;" cz-shortcut-listen="true">
    <div class="wrapper">

        <!-- Navbar -->
        <nav @*class="main-header navbar navbar-expand navbar-dark navbar-info"*@ class=" navbar-expand navbar-dark" style="background-color:#3c8dbc">
            <!-- Left navbar links -->
            @*<ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/" class="nav-link">Home</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link">Contact</a>
            </li>
        </ul>*@
            <div class="row">
                <div class="col-md-6 ">
                    <ul class="navbar-nav font-weight-bold">

                        <li class="nav-item d-none d-sm-inline-block">
                            <a href="/" class="nav-link"><img src="~/images/logo1.png" width="150" />@*Làng du lịch bình quới*@</a>

                        </li>

                    </ul>
                </div>
                <div class="col-md-6 p-2">
                    @*<span class="float-right">@Html.Partial("_LoginPartial")</span>*@

                </div>
            </div>
            @*<partial name="_LoginPartial.cshtml" />*@
        </nav>
        <!-- /.navbar -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 408.359px;">
           
            <!-- Main content -->
            <div class="content">
                <div class="container">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                            @TempData["AlertMessage"]
                        </div>
                    }
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>Copyright © 2014-2019 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/lib/AdminLTE-3.0.5/plugins/jquery/jquery.js"></script>
    <script src="~/lib/AdminLTE-3.0.5/plugins/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/AdminLTE-3.0.5/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/AdminLTE-3.0.5/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/AdminLTE-3.0.5/plugins/jquery.maskedinput/jquery.maskedinput.js"></script>
    <script src="~/lib/AdminLTE-3.0.5/plugins/bootbox.js/bootbox.js"></script>
    <script src="~/lib/numeral.js/numeral.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/AdminLTE-3.0.5/plugins/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/AdminLTE-3.0.5/plugins/select2/js/select2.js"></script>
    <!-- jquery-validation -->
    <script src="~/lib/AdminLTE-3.0.5/plugins/jquery-validation/additional-methods.min.js"></script>
    <!-- DataTables -->
    <script src="~/lib/AdminLTE-3.0.5/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/AdminLTE-3.0.5/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <!-- pace-progress -->
    <script src="~/lib/AdminLTE-3.0.5/plugins/pace-progress/pace.min.js"></script>
    <!-- Toastr -->
    <script src="~/lib/AdminLTE-3.0.5/plugins/toastr/toastr.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/AdminLTE-3.0.5/dist/js/adminlte.js"></script>
    <!-- date validate -->
    <script src="~/lib/additional-methods_date_valid.js"></script>
    <!-- ChartJs -->
    <script src="~/lib/ChartJs/Chart.js/Chart.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        $(function () {
            $(".maskInput").mask("99/99/9999");

            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(1000).slideUp(1000);
        });

    </script>
    <style>
        .error {
            color: red;
        }

        .mytable tr:hover {
            background-color: #ECF5F5;
            cursor: pointer;
        }

        .hoverClass {
            background-color: #3C8DBC;
            /*color: white;*/
        }

        .card {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .mytable {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
</body>
</html>
