@using Data.Models_QLTour
@model IEnumerable<CodeSupplier>

@{
    ViewData["Title"] = "listCapcode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Danh sách đề nghị cấp code Supplier
    </h1>
    @*<ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active"><a asp-action="index">Danh sách tour</a></li>
    </ol>*@
</section>
<section class="content">
    
        <div class="box">
            <div class="box-header">
                <form asp-action="listCapcode" method="get">
                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" placeholder="Tìm thông tin nhà cung cấp" class="form-control form-control-sm" name="search" value="@ViewBag.search" />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-default btn-sm"><i class="fa fa-search"></i></button>
                                    @*<a asp-action="GetCapcodSupplierById" class="btn btn-primary" title="Tạo yêu cầu"><i class="fa fa-plus"></i></a>*@
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="box-body">
                <div class="col-md-12" style="overflow-x:auto">
                    <table class="table mytable">
                        <thead>
                            <tr>
                                <th class="text-center"><i class="fa fa-gear"></i></th>
                                <th>
                                    Tên giao dịch
                                </th>
                                <th>
                                    Group / Tập đoàn
                                </th>
                                <th>
                                    Tên thương mại
                                </th>
                                <th>
                                    Tỉnh / thành phố
                                </th>
                                <th>
                                    Người đề nghị
                                </th>
                                <th>
                                    Ngày đề nghị
                                </th>
                                <th>
                                    CN
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        <a asp-action="EditCapcodeSupplierById" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                    </td>
                                    <td>
                                        @item.Tengiaodich
                                    </td>
                                    <td>
                                        @item.Tapdoan
                                    </td>
                                    <td>
                                        @item.Tenthuongmai
                                    </td>
                                    <td>
                                        @item.Tinhtp
                                    </td>
                                    <td>
                                        @item.Nguoiyeucau
                                    </td>
                                    <td>
                                        @item.Ngayyeucau.Value.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        @item.Chinhanh
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                   
                </div>
            </div>
        </div>
    
</section>