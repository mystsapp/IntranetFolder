@using Data.Models_QLTour
@using Microsoft.AspNetCore.Http
@model CodeSupplier

@{
    ViewData["Title"] = "Cấp code Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
<script src="~/js/Admin/Supplier/CodeSupplierControl.js"></script>

}

<section class="content-header">
    <h1>
        Cập nhật Thông tin nhà cung cấp dịch vụ
    </h1>
    @*<ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active"><a href="@Context.Session.GetString("urlCodeSupplier")">Danh sách cấp code nhà cung cấp dịch vụ</a></li>
        </ol>*@
</section>
<section class="content">

    <div class="card">
        @*     <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Danh sách cấp code nhà cung cấp dịch vụ</h3>

            <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fas fa-times"></i>
            </button>
            </div>
            </div>*@
        <div class="card-body">
            <form asp-action="EditCapcodeSupplierById" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" id="txtCapcodeId" />
                <input type="hidden" asp-for="Chinhanh" />
                <input type="hidden" asp-for="Nguoiyeucau" />
                <input type="hidden" asp-for="Ngayyeucau" />
                <div class="row">

                    <div class="col-md-2">
                        <label class="control-label">Code</label>
                        <input asp-for="Code" class="form-control form-control-sm text-center" readonly />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label class="control-label">Tên giao dịch</label>
                        <input asp-for="Tengiaodich" class="form-control form-control-sm" id="txtTengiaodich" />
                        <span asp-validation-for="Tengiaodich" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Tên thương mại</label>
                        <div class="input-group">
                            <input asp-for="Tenthuongmai" class="form-control form-control-sm" id="txtTenthuongmai" />
                            <span class="input-group-btn">
                                <a href="javascript:;" class="btn btn-default btSearchkh btn-sm" id="btSearchkh" title="Kiểm tra thông tin Supplier"><i class="fa fa-question text-danger"></i></a>
                            </span>
                            <span asp-validation-for="Tenthuongmai" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="control-label">Group / Tập đoàn</label>
                        <input asp-for="Tapdoan" class="form-control form-control-sm text-uppercase txtGroup" />
                        <span asp-validation-for="Tapdoan" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">
                    <div class="form-group col-md-2">
                        <label class="control-label">Tỉnh</label>
                        <select asp-items="@ViewBag.tinh" asp-for="Tinhtp" class="form-control form-control-sm select2 ddlTinh"></select>
                        <span asp-validation-for="Tinhtp" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label class="control-label">Thành phố</label>
                        <select asp-items="@ViewBag.thanhpho" asp-for="Thanhpho" class="form-control form-control-sm ddlThanhpho" style="width:100%"></select>
                    </div>
                    <div class="form-group col-md-2">
                        <label class="control-label">Quốc gia</label>
                        <select asp-items="@ViewBag.quocgia" asp-for="Quocgia" class="form-control form-control-sm select2" style="width:100%"></select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Địa chỉ</label>
                        <input asp-for="Diachi" class="form-control form-control-sm" />
                        <span asp-validation-for="Diachi" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-2">
                        <label class="control-label">Điện thoại</label>
                        <input asp-for="Dienthoai" class="form-control form-control-sm" />
                        <span asp-validation-for="Dienthoai" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label class="control-label">Fax</label>
                        <input asp-for="Fax" class="form-control form-control-sm" />
                        <span asp-validation-for="Fax" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label class="control-label">Mã số thuế</label>
                        <input asp-for="Masothue" class="form-control form-control-sm" />
                        <span asp-validation-for="Masothue" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label class="control-label">Ngành nghề</label>
                        <input asp-for="Nganhnghe" class="form-control form-control-sm" />
                        <span asp-validation-for="Nganhnghe" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Người liên hệ</label>
                        <input asp-for="Nguoilienhe" class="form-control form-control-sm" />
                        <span asp-validation-for="Nguoilienhe" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label">Website</label>
                        <input asp-for="Website" class="form-control form-control-sm" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control form-control-sm" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label">Ghi chú</label>
                        <textarea asp-for="Ghichu" class="form-control form-control-sm" rows="3" readonly></textarea>
                        <span asp-validation-for="Ghichu" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <button class="btn btn-success btn-sm"><i class="fa fa-thumbs-o-up"> Cấp code</i></button>
                        <a href="@Context.Session.GetString("urlCodeSupplier")" class="btn btn-default">Thoát</a>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="button" id="btConfirmHuyCapcode" class="btn btn-warning" value="Hủy cấp code" />
                    </div>
                </div>
            </form>
        </div>
    </div>

</section>

<div id="iModalTimkh" class="modal" role="dialog" style="display:none">
    <div class="ilisttimkh"></div>
</div>

