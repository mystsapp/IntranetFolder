@*<script src="~/js/Admin/Supplier/indexController"></script>*@

<script>
    $('#btnCapNhatCamLaoPartial_Back').off('click').on('click', function(){
        $('#divCamLao').show(500);
        $('#ThemMoiCamLao_Partial').hide(500);
        $('#CapNhatCamLao_Partial').hide(500);
    })

    $('#btnCapNhatCamLaoPartial_Save').off('click').on('click', function () {

        if ($('#frmCapNhatCamLaoPartial').valid()) {
            var camLao = $('#frmCapNhatCamLaoPartial').serialize();
            $.ajax({
                type: "POST",
                url: "/DanhGiaCamLao/CapNhatCamLao_Partial",
                data: camLao,
                dataType: "json",
                success: function (response) {
                    if (response.status) {

                        toastr.success('Cập nhật thành công!'); // toastr in admin/tour/indexController.js

                        $('#ThemMoiCamLao_Partial').hide(500);
                        $('#CapNhatCamLao_Partial').hide(500);

                        var supplierId = '@Model.SupplierDTO.Code';

                        CamLaoTbl(supplierId);
                    }
                    else {
                        toastr.error(response.message);

                    }
                }
            });
        }

    });
</script>