<script src="~/js/Admin/Supplier/indexController" > </script>

<script>
    $('#btnThemMoiNhaHangPartial_Back').off('click').on('click', function(){
        $('#tblNhaHang').show(500);
        $('#ThemMoiNhaHang_Partial').hide(500);
    })

    
    $('#btnThemMoiNhaHangPartial_Save').off('click').on('click', function () {
        
        if ($('#frmThemMoiNhaHangPartial').valid()) {
            var nhaHang = $('#frmThemMoiNhaHangPartial').serialize();
            $.ajax({
                type: "POST",
                url: "/DanhGiaNhaHang/ThemMoiNhaHang_Partial",
                data: nhaHang,
                dataType: "json",
                success: function (response) {
                    if (response.status) {

                        toastr.success('Tạo mới thành công!'); // toastr in admin/tour/indexController.js

                        $('#ThemMoiNhaHang_Partial').hide(500);

                        var supplierId = '@Model.SupplierDTO.Code';
                        
                        indexController.Load_DichVuPartial(supplierId);
                    }
                    else {
                        toastr.error(response.message);
                        
                    }
                }
            });
        }
        
    });

</script>