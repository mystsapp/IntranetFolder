@model DanhGiaNhaHangViewModel

<form method="post" autocomplete="off" id="frmCapNhatNhaHangPartial" enctype="multipart/form-data">
    <div class="pr-4 pl-4 text-sm">

        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for=DanhGiaNhaHangDTO.SupplierId />
        <input type="hidden" asp-for=DanhGiaNhaHangDTO.Id />
        <input type="hidden" asp-for=DanhGiaNhaHangDTO.LoaiDvid />
        <input type="hidden" asp-for=DanhGiaNhaHangDTO.NgayTao />
        <input type="hidden" asp-for=DanhGiaNhaHangDTO.NguoiTao />

        
        <div class="form-group row">

            <div class="col-md-8">
                <label asp-for="DanhGiaNhaHangDTO.TenNcu" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.TenNcu" class="form-control form-control-sm " id="txtTenCreate" readonly />
                <span asp-validation-for="DanhGiaNhaHangDTO.TenNcu" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.SoChoToiDa" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.SoChoToiDa" class="form-control form-control-sm " id="txtSoChoToiDa" />
                <span asp-validation-for="DanhGiaNhaHangDTO.SoChoToiDa" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.Menu" class="control-label" for="txtCoGpkd"></label>
                <select asp-for="DanhGiaNhaHangDTO.Menu" class="form-control form-control-sm input-sm"
                        asp-items="@(new SelectList(Model.LoaiMenus))" id="ddlLoaiMenu">
                </select>
                <span asp-validation-for="DanhGiaNhaHangDTO.Menu" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">

            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.ChatLuongMonAn" class="control-label"></label>
                <select asp-for="DanhGiaNhaHangDTO.ChatLuongMonAn" class="form-control form-control-sm input-sm"
                        asp-items="@(new SelectList(Model.ChatLuongMonAns))" id="ddlChatLuongMonAn">
                </select>
                <span asp-validation-for="DanhGiaNhaHangDTO.ChatLuongMonAn" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="DanhGiaNhaHangDTO.ViTri" class="control-label"></label>@*(<strong class="text-red">*</strong>)*@
                <input asp-for="DanhGiaNhaHangDTO.ViTri" class="form-control form-control-sm " id="txtViTri" />
                <span asp-validation-for="DanhGiaNhaHangDTO.ViTri" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.NguoiDanhGia" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.NguoiDanhGia" class="form-control form-control-sm " id="txtNguoiDanhGia" />
                <span asp-validation-for="DanhGiaNhaHangDTO.NguoiDanhGia" class="text-danger"></span>
            </div>
            
            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.NgayDanhGia" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.NgayDanhGia" class="form-control form-control-sm " id="txtNgaiDanhGia" type="date"/>
                <span asp-validation-for="DanhGiaNhaHangDTO.NgayDanhGia" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <!-- checkbox-->

            <div class="col-md-1">
                <label asp-for="DanhGiaNhaHangDTO.Gpkd" class="control-label" ></label>
                <input asp-for="DanhGiaNhaHangDTO.Gpkd" class="form-control form-control-sm " id="ckGpkd" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.Gpkd" class="text-danger"></span>
            </div>

            <div class="col-md-1">
                <label asp-for="DanhGiaNhaHangDTO.Vat" class="control-label" ></label>
                <input asp-for="DanhGiaNhaHangDTO.Vat" class="form-control form-control-sm " id="ckVat" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.Vat" class="text-danger"></span>
            </div>
            
            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.DinhLuongMonAn" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.DinhLuongMonAn" class="form-control form-control-sm " id="ckDinhLuong" />
                <span asp-validation-for="DanhGiaNhaHangDTO.DinhLuongMonAn" class="text-danger"></span>
            </div>

            <div class="col-md-1">
                <label asp-for="DanhGiaNhaHangDTO.BaiDoXe" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.BaiDoXe" class="form-control form-control-sm " id="ckCoBaiDoXe" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.BaiDoXe" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.CoTieuChuanNoiBo" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.CoTieuChuanNoiBo" class="form-control form-control-sm " id="ckCoTieuChuanNoiBo" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.CoTieuChuanNoiBo" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.PhongKVRieng" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.PhongKVRieng" class="form-control form-control-sm " id="ckCoTieuChuanNoiBo" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.PhongKVRieng" class="text-danger"></span>
            </div>

            <div class="col-md-1">
                <label asp-for="DanhGiaNhaHangDTO.CoKhaoSatThucTe" class="control-label" for="txtDaCoKhaoSatThucTe"></label>
                <input asp-for="DanhGiaNhaHangDTO.CoKhaoSatThucTe" class="form-control form-control-sm " id="txtDaCoKhaoSatThucTe" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.CoKhaoSatThucTe" class="text-danger"></span>
            </div>
            
            <div class="col-md-1">
                <label asp-for="DanhGiaNhaHangDTO.KqDat" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.KqDat" class="form-control form-control-sm " id="txtKqDat" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.KqDat" class="text-danger"></span>
            </div>

        </div>
        
        <div class="form-group row">

            <div class="col-md-2">
                <label asp-for="DanhGiaNhaHangDTO.KqKhaoSatThem" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.KqKhaoSatThem" class="form-control form-control-sm " id="txtKqKhaoSatThem" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.KqKhaoSatThem" class="text-danger"></span>
            </div>

            <div class="col-md-1">
                <label asp-for="DanhGiaNhaHangDTO.TiemNang" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.TiemNang" class="form-control form-control-sm float-left" id="ckTiemNang" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.TiemNang" class="text-danger"></span>
            </div>

            <div class="col-md-1">
                <label asp-for="DanhGiaNhaHangDTO.TaiKy" class="control-label"></label>
                <input asp-for="DanhGiaNhaHangDTO.TaiKy" class="form-control form-control-sm float-left" id="ckTaiKy" type="checkbox" />
                <span asp-validation-for="DanhGiaNhaHangDTO.TaiKy" class="text-danger"></span>
            </div>
            
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary btn-sm" id="btnCapNhatNhaHangPartial_Save"><i class="fas fa-save"></i> Save</button>
            <button type="button" class="btn btn-success btn-sm" id="btnCapNhatNhaHangPartial_Back"><i class="fas fa-backward "></i> Back</button>
        </div>
    </div>
</form>

<script src="~/js/Admin/Supplier/indexController" > </script>

<script>
    $('#btnCapNhatNhaHangPartial_Back').off('click').on('click', function(){
        $('#tblNhaHang').show(500);
        $('#ThemMoiNhaHang_Partial').hide(500);
        $('#CapNhatNhaHang_Partial').hide(500);
    })

    
    $('#btnCapNhatNhaHangPartial_Save').off('click').on('click', function () {
        
        if ($('#frmCapNhatNhaHangPartial').valid()) {
            var nhaHang = $('#frmCapNhatNhaHangPartial').serialize();
            $.ajax({
                type: "POST",
                url: "/DanhGiaNhaHang/CapNhatNhaHang_Partial",
                data: nhaHang,
                dataType: "json",
                success: function (response) {
                    if (response.status) {

                        toastr.success('Cập nhật thành công!'); // toastr in admin/tour/indexController.js

                        $('#CapNhatNhaHang_Partial').hide(500);

                        var supplierId = '@Model.SupplierDTO.Code';
                        
                        indexController.Load_DichVuPartial(supplierId);
                    }
                    else {
                        toastr.error(response.message);
                        
                    }
                }
            });
        }
        
    });

</script>